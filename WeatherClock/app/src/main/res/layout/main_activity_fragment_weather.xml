<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEEEEE"
    android:orientation="vertical"
    android:paddingTop="56dp"
    android:id="@+id/weather_fragment">



    <TextView
        android:id="@+id/tv_location_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Bucharest, RO"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_location_lastupdated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_location_city"
        android:layout_centerHorizontal="true"
        android:text="Last update:  Dec 08, 2014 13:45:58 AM"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_location_lastupdated"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:textColor="@color/colorAccent"
        android:textSize="90sp" />

    <ImageButton
        android:id="@+id/btn_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_refresh"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/weather_icon"
        android:background="@null"
        android:alpha="0.5"
        android:layout_marginRight="25dp"/>

    <TextView
        android:id="@+id/tv_weatherType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_refresh"
        android:layout_centerHorizontal="true"
        android:text="Sunny"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_weatherType"
        android:layout_centerHorizontal="true"
        android:text="Humidity: 59%"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_humidity"
        android:layout_centerHorizontal="true"
        android:text="Pressure: 977 hPa"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pressure"
        android:layout_centerHorizontal="true"
        android:text="16.58 Â°C"
        android:textSize="50sp" />


</RelativeLayout>